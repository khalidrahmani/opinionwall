extends ../layouts/layout

block content
  #content.container    
    form.form-search(method="get", action='/search') 
      h4 Results for : 
        input.span4(type="text", name="q", value=q)
        button.btn(type='submit') Search
    .surveys    
      each survey in surveys        
        a.survey-title(href='/surveys/'+survey._id) #{survey.question}
        p 
          small=formatDate(survey.createdAt, "%b %d, %Y at %I:%M %p") 
          ,&nbsp;
          small #{survey.tp} votes                   
              
    if (moreResults)
      button.ajax.btn  Load more results ...
          



  
  