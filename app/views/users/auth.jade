extends ../layouts/default

block main
  h1= title

block content
  .row
    .offset1.span5
      a(href="/auth/facebook")
        img(src="http://jquery-fyneworks.googlecode.com/svn/trunk/documentation/facebook.png")
      a(href="/auth/twitter")
        img(src="http://jquery-fyneworks.googlecode.com/svn/trunk/documentation/twitter.png")
      a(href="/auth/google")
        img(src="http://jquery-fyneworks.googlecode.com/svn/trunk/documentation/gplus.png")
    .span6
      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li= error.type

      block auth
